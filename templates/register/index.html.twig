{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col jumbotron">
            <h1 class="display-4">Register New User</h1>
            <hr class="my-4"/>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group row">
            <div class="col-1" >
            {{ form_label(form.username) }}
            </div>
            <div class="col-8">
            {{ form_widget(form.username, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col-3">
            {% if form_errors(form.username) or (error|length > 0) %}
               <span>
                   <small class="form-text text-muted" style="color: red!important;">{{ form_errors(form.username)|striptags }} {{ error }}</small>
               </span>
            {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1" >
            {{ form_label(form.fullname) }}
            </div>
            <div class="col-8">
            {{ form_widget(form.fullname, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col-3">
            {% if form_errors(form.fullname) %}
               <span>
                   <small class="form-text text-muted" style="color: red!important;">{{ form_errors(form.fullname)|striptags }}</small>
               </span>
            {% endif %}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                {{ form_label(form.password) }}
            </div>
            <div class="col-8">
                {{ form_widget(form.password, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col-3">
                {% if form_errors(form.password) %}
                <span>
                   <small class="form-text text-muted" style="color: red!important;">{{ form_errors(form.password)|striptags }}</small>
                </span>
                {% endif %}
            </div>
        </div>
        <hr class="my-4"/>
        <div class="form-group row">
            <div class="col-1"></div>
            <div class="col-8" style="text-align: right">
                {{ form_widget(form.save) }}
            </div>
            <div class="col-3"></div>
        </div>
        {{ form_rest(form) }}

        {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
